<div class="container">
  <div class="row">
    <div class="col">
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">

      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="form-group">
        <%=form_for @product, local: true do |f|%>
        <%=f.label :code%><br>
        <%=f.text_field :code, class: 'form-control'%><br>
        <%=f.label :name%><br>
        <%=f.text_field :name, class: 'form-control'%><br>
        <%=f.label :description%><br>
        <%=f.text_field :description, class: 'form-control'%><br>
        <%=f.submit 'Send', :class =>"btn btn-outline-primary"%>
        <%end%>
      </div>
    </div>
  </div>
</div>
